{
  "Database": {
    "FileName": "TimeTracking.db",
    "ConnectionString": {
      "Mode": "ReadWriteCreate",
      "Cache": "Shared",
      "Pooling": true
    }
  },
  "Logging": {
    "MinimumLevel": "Debug",
    "FilePath": "Logs/pricisapp-{Date}.log",
    "RetainedFileCount": 7,
    "FileSizeLimitBytes": 10000000
  },
  "UI": {
    "DefaultTheme": "System Default",
    "AvailableThemes": [
      "System Default",
      "Light",
      "Dark",
      "Blue",
      "Green",
      "High Contrast"
    ],
    "DefaultFont": {
      "Name": "Segoe UI",
      "Size": 9.0
    }
  }
} 